%p#notice= notice
%h1 Document Boxes
%table
  %thead
    %tr
      %th Document
      %th{:colspan => "3"}
  %tbody
    - @document_boxes.each do |document_box|
      %tr
        - if document_box.name.nil?
          %td= document_box.document.file.basename
        - else
          %td= document_box.name
        %td= image_tag(document_box.document_url, width: 100) if document_box.document?
        %td= link_to '書類へのリンク', document_box.document_url
        %td= link_to 'Show', document_box
        %td= link_to 'Edit', edit_document_box_path(document_box)
        %td= link_to 'Destroy', document_box, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Document Box', new_document_box_path
